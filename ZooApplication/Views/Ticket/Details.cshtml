@model ZooApplication.Models.ViewModels.DetailsTicket


@{
    ViewBag.Title = "View";
}
<h2>@Model.SelectedTicket.TicketType @Model.SelectedTicket.TicketPrice</h2>
<nav>
    <ul>
        <li><a href="/Ticket/List">Go back to list</a></li>
        <li><a href="/Ticket/Edit/@Model.SelectedTicket.TicketID">Update</a></li>
        <li><a style="color:#ab2020;" href="/Ticket/DeleteConfirm/@Model.SelectedTicket.TicketID">Delete</a></li>
    </ul>
</nav>
<div class="row">
    <div class="col-md-6 col-sm-12">
       <div>First Name: @Model.SelectedTicket.TicketType</div>
       <div>Last Name: @Model.SelectedTicket.TicketPrice</div>
    </div>


    <div class="col-md-6 col-sm-12">
        <h4>Bookings:</h4>
        @foreach (var booking in Model.Bookings)
        {
            <a href="/Booking/Details/@booking.BookingID">@booking.BookingName</a><br />

        }
    </div>
</div>